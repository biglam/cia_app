<%= form_for @country do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :flag %>
  <%= f.text_field :flag %>
  <br>
  <%= f.label :size %>
  <%= f.text_field :size %>
  <br>
  <%= f.label :language %>
  <%= f.text_field :language %>
  <br>
  <%= f.label :population %>
  <%= f.text_field :population %>
  <br>
  <%= f.label :currency, 'Currency Symbol' %>
  <%= f.text_field :currency %>
  <br>
  <%= f.label :exchange_rate %>
  <%= f.text_field :exchange_rate %>
  <br>
  <%= f.submit 'Submit!' %>
<% end %>